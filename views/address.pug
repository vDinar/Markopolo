doctype html
html
  head
    include includes/head.pug
    |
    script(src='/skriptovi/adresa.js')
    script(src='/skriptovi/info.js')
    script(src='/skriptovi/pretraga.js')
  body
    include includes/header.pug
    |
    div(class='body')
      div(class='address')
        div(class='coin-info')
          div(class='preview')
            img(src='/slike/valuta.png')
          div(class='info-table')
            div(class='info-tr')
              div(class='name') Rudarska jačina (MH/s)
              div(class='value', id='coinInfoHashrate') -
            div(class='info-tr')
              div(class='name') Rudarska težina
              div(class='value', id='coinInfoDifficulty') -
            div(class='info-tr')
              div(class='name') Proizvedeno
              div(class='value', id='coinInfoSupply') -
          a(href='https://www.vdinar.info', target='_blank')
            div(class='website')
              div(class='title') Službena stranica
              div(class='url') https://www.vdinar.info
        div(class='address-info')
          div(class='container')
            div(class='content')
              div(class='search-bar')
                form(onsubmit='search(); return false;')
                  input(id='searchText', placeholder='Traži poziciju bloka, rezultat bloka, transakciju ili adresu...', type='text')
                  input(type='submit', value='Traži')
              div(class='address-main')
                div(class='address-tr address-tr--main')
                  div(class='address-td')= 'Adresa'
                  div(class='address-td')= 'Kredit'
                div(class='address-tr address-tr--values')
                  div(class='address-td' id='address')= address
                  div(class='address-td credit')
                    span(class='credit' id='addressCredit')
                    span(class='currency')= ' VDN'
              div(class='address-summary')
                div(class='address-tr address-tr--main')
                  div(class='address-td')= 'Primljeno'
                  div(class='address-td')= 'Potrošeno'
                div(class='address-tr address-tr--values')
                  div(class='address-td received')
                    span(class='value' id='addressReceived')
                    span(class='currency')= ' VDN'
                  div(class='address-td spent')
                    span(class='value' id='addressSpent')
                    span(class='currency')= ' VDN'
              div(class='address-transactions' id='addressTransactions')
                div(class='address-tr address-tr--main')
                  div(class='address-td')= 'Datum'
                  div(class='address-td')= 'Transakcija'
                  div(class='address-td')= 'Vrijednost'
    |
    include includes/footer.pug
